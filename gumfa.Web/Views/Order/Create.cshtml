@model gumfa.Web.Models.DTO.OrderAddDto

<form asp-action="Create" enctype="multipart/form-data" onsubmit="showLoader()">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Create Order</h1>

        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">OrderName</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="OrderName" class="form-control" />
                <span asp-validation-for="OrderName" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>

        <div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}