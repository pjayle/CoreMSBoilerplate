@model gumfa.Web.Models.LoginRequestDto
@{
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - .Net Core Boiler plate</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
    @* <link rel="stylesheet" href="~/gumfa.Web.styles.css" asp-append-version="true" /> *@
</head>
<body class="bg-light">

    <div class="d-flex justify-content-center align-items-center vh-100">
        <form method="post" class="w-100" style="max-width: 400px;">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Login</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <input asp-for="UserName" class="form-control" placeholder="Username..." />
                        <span asp-validation-for="UserName" class="text-danger small" />
                    </div>
                    <div class="mb-3">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password..." />
                        <span asp-validation-for="Password" class="text-danger small" />
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-secondary">Login</button>
                    </div>
                    <div class="d-grid">
                        <a class="nav-link " asp-controller="Auth" asp-action="Register">Register</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <partial name="_Notifications" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>